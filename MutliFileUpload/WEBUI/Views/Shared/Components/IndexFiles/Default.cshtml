@model List<Entities.Concrete.FileUpload>
 <a href="/Home/DeleteAllItem" class="btn btn-danger">Delete All Record</a>
<hr />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FileName</th>
            <th scope="col">FileSize</th>
            <th scope="col">UploadTime</th>
            <th scope="col">Download</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FileName</td>
                <td>@item.FileSize</td>
                <td>@item.UploadTime</td>
                <td>
                    <a href="/Home/Download?fileName=@item.FileName" class="btn btn-primary">Download</a>
                   
                </td>  
                <td>
                    <a href="/Home/DeleteItem?id=@item.Id" class="btn btn-danger">X</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>